{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "lib": ["esnext", "deno.ns"],
    "paths": {
      "std/*": ["https://deno.land/std@0.190.0/*"],
      "@supabase/supabase-js": ["https://esm.sh/@supabase/supabase-js@2.45.0"],
      "shared/*": ["./functions/_shared/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}